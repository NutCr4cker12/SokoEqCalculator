                <ColumnDefinition Width="{StaticResource ImageSize}" />
            </Grid.ColumnDefinitions>
                <ImageButton 
                    Grid.Column="0"
                    Source="cards_small.png"
                    BackgroundColor="Gray"
                    BorderColor="Black"
                    CornerRadius="5"
                    Padding="0"
                    HeightRequest="5"
                    WidthRequest="5"
                    Clicked="OpenCardSelectionClicked" />

                <Entry
                    Grid.Column="1"
                    HorizontalOptions="Fill"
                    Text="{Binding PrivateText}" 

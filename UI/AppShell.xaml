<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SokoEqCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SokoEqCalculator"
    xmlns:views="clr-namespace:SokoEqCalculator.Views"
    Shell.TabBarIsVisible="False"
    >

    <FlyoutItem
        Title="Soko Equity Calculator"
        FlyoutDisplayOptions="AsMultipleItems"
        >
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:SettingsView}"
            Route="Settings" />

        <ShellContent
            Title="About"
            Icon="about.png"
            ContentTemplate="{DataTemplate views:AboutView}"
            Route="About" />

    </FlyoutItem>


</Shell>

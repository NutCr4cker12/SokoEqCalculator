<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SokoEqCalculator.ViewModels"
             xmlns:controls="clr-namespace:SokoEqCalculator.controls"
             x:Class="SokoEqCalculator.Views.MainPage"
>

    <ContentPage.BindingContext>
        <viewModels:MainViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25">

            <controls:PlayerView 
                Player="{Binding Player1}" 
                Deck="{Binding Deck}" 
            />

            <controls:PlayerView 
                Player="{Binding Player2}" 
                Deck="{Binding Deck}" />


            <!--<controls:CardView CardModel="{Binding Card}" />-->
            <Button VerticalOptions="End" Command="{Binding CalculateEquityCommand}" Text="Calculate" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
